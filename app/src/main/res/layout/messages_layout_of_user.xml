<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/messages_image" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messages_image"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/messages_image"
        android:background="@drawable/message_text_background"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/message_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/message_text"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />
</RelativeLayout>