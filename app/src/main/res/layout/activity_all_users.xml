<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huytrieu.familybook.AllUsersActivity">

    <include
        android:id="@+id/all_users_app_bar"
        layout="@layout/app_bar_layout" />

    <android.support.v7.widget.RecyclerView
        android:padding="15dp"
        android:id="@+id/all_user_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_input_text"
        android:layout_marginTop="21dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_users_app_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:text="Tìm kiếm bạn"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/search_input_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="@drawable/search_text_background"
        android:ems="10"
        android:hint="Tìm kiếm"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/gradStop"
        android:textColorHint="@color/gradStop"
        android:textSize="18sp"
        tools:textColor="@color/gradStop" />

    <ImageButton
        android:id="@+id/search_friend_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/search_input_text"
        android:layout_alignEnd="@+id/textView"
        android:background="@drawable/search_text_background"
        app:srcCompat="@drawable/search" />
</RelativeLayout>
