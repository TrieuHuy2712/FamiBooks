<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huytrieu.familybook.StatusActivity">

    <include
        android:id="@+id/status_app_bar"
        layout="@layout/app_bar_layout" />

    <EditText
        android:id="@+id/edt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="Change status here ...."
        android:inputType="textMultiLine"
        android:padding="30dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:id="@+id/btn_save_changes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Save Changes" />
</RelativeLayout>
